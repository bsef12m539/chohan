            <h2>Properties</h2>

        </div>
    </div>
</section>

<section class="generalwrapper dm-shadow clearfix">
    <div class="container">
        <div class="row">
            <!-- #left_sidebar -->
            <div id="content" class="col-lg-8 col-md-8 col-sm-8 col-xs-12 clearfix ">
                <div class=" ">


                    <div>
                        <form id="sort_form">
                            <input type="hidden" name="page" value="1">

                            <!--SORT BY-->
