                        <div class="clear"></div>
                    </div>

                    @if (ViewBag.rent != null)
                    {
                        foreach (property p in ViewBag.rent)
                        {
                            <div id="content" class="">
                                <div id="search-content" class="property_wrapper boxes clearfix">
                                    <div class="search-list-container">
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                                            <div class="ImageWrapper boxes_img">
                                                <table align="center" class="featured-image-table" cellpadding="0" cellspacing="0">
                                                    <tr>

                                                        <td>
                                                            <img class="search-list-img " src="@p.pimage" alt="">
                                                        </td>

                                                    </tr>
                                                </table>
                                                <div class="box_type">PKR @p.price</div>
                                            </div>
                                            <!-- ImageWrapper -->
                                        </div>
                                        <div id="search-details" class="col-lg-8 col-md-8 col-sm-8 col-xs-12 clearfix">
                                            <div class="title clearfix">
                                                <h3>
                                                    <a href="http://www.chohan.com.pk/property/view-2243253.html">
                                                        @p.pAddress
                                                    </a> <small class="small_title">

                                                    </small>
                                                </h3>
                                                <div class="property_desc clearfix">
                                                    <p>
                                                        @p.Description
                                                    </p>
                                                    <ul id="prop-btns">
                                                        <a class="btn btn-primary btn-xs" href="~/Home/ViewProperty/@p.pid" title="">
                                                            View Property
                                                        </a>

                                                        <a data-placement="top" type="button" class="btn btn-primary btn-xs blue-btn agent_detailpop" title="Agent Detail" data-container="body" data-toggle="popover" data-content="<table class='table'><tr><td>Name:</td><td>@p.Contact_Person</td></tr><tr><td>Phone:</td><td>@p.phone</td></tr><tr><td>Cell:</td><td>@p.cell</td></tr></table>" data-html="true">
              Agent Detail              </a>


                                                    </ul>
                                                </div>
                                            </div>
                                            <!-- end title -->
                                        </div>
                                    </div>
                                    <div class="boxed_mini_details1 clearfix clear-float">
                                        N/A      <span class="sqft"><strong>Area:</strong><i class="bg-ico area-ico"></i>@p.Area @p.Unit</span>
                                        <span class="status">
                                            <strong>
                                                Beds
                                            </strong><i class="icon-bed"></i> @p.Bedrooms
                                        </span>
                                        <span class="status">
                                            <strong>
                                                Marketed by
                                            </strong><i class=""></i>
                                            @p.Contact_Person
                                        </span>
                                    </div>
                                    <!-- end boxed_mini_details1 -->
                                </div>
                                <!-- end property_wrapper -->
                            </div>
                        }
                    }








