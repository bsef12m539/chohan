
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <section class="post-wrapper-top dm-shadow clearfix">
        <div class="container">
            <div class="post-wrapper-top-shadow">
                <span class="s1"></span>
            </div>
            <div class="col-lg-12 page-heading">
                <h2>Please contact us to get your property properly evaluated</h2>
            </div>
        </div>
    </section>

    <section class="generalwrapper dm-shadow clearfix">
        <div class="container">
            <div class="row">
                <!-- #left_sidebar -->
                <div id="content" class="col-lg-8 col-md-8 col-sm-8 col-xs-12 clearfix">
                    <div class="">

                        <p>Please feel free to send information of your properties for accurate valuation and comprehensive guidance.</p>
                        <form enctype="multipart/form-data" action="~/Home/addProperty" method="post" >
                           Image <input type="file" title="search image" required id="file" name="file"  /> 
                            <label>City <em>(required)</em></label>
                            <div>
                                <select name="city" required  class="show-menu-arrow selectpicker">                                   
                                    
                                    <option value="Islamabad">Islamabad</option>                                   
                                    <option value="Karachi">Karachi</option>                                   
                                    <option value="Lahore">Lahore</option>                                   
                                    <option value="Multan">Multan</option>                                    
                                    <option value="Peshawar">Peshawar</option>
                                   
                                </select>
                            </div>
                            <label>Purpose <em>(required)</em></label>
                            <select name="purpose" required  class="show-menu-arrow selectpicker">                                
                                <option value="For Sale">For Sale</option>
                                <option value="To Rent">To Rent</option>
                            </select>
                            <label>Type <em>(required)</em></label>
                            <select name="type" required  class="show-menu-arrow selectpicker">                               
                                <option value="Houses">Houses</option>
                                <option value="Flats">Flats</option>
                                <option value="Upper Portions">Upper Portions</option>
                                <option value="Lower Portions">Lower Portions</option>
                                <option value="Farm Houses">Farm Houses</option>
                                <option value="Rooms">Rooms</option>
                                <option value="Penthouse">Penthouse</option>
                                <option value="Residential Plots">Residential Plots</option>
                                <option value="Plot Files">Plot Files</option>
                                <option value="Commercial Plots">Commercial Plots</option>
                                <option value="Agricultural Land">Agricultural Land</option>
                                <option value="Plot Forms">Plot Forms</option>
                                <option value="Industrial Land">Industrial Land</option>
                                <option value="Offices">Offices</option>
                                <option value="Shops">Shops</option>
                                <option value="Warehouses">Warehouses</option>
                                <option value="Factories">Factories</option>
                                <option value="Buildings">Buildings</option>
                                <option value="Other">Other</option>
                            </select>

                            <label>Asking Price (PKR) <em>(required)</em></label>
                            <input type="text" required name="price" id="ll_price" class="form-control">

                            <label>Bedrooms</label>
                            <select name="beds" required class="show-menu-arrow selectpicker">                               
                                <option value="-1">Studio</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10+">10+</option>
                            </select>
                            <label>Bathrooms</label>
                            <select name="bath" required class="show-menu-arrow selectpicker">                      
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10+">10+</option>
                            </select>

                            <label>Covered Area</label>
                            <input type="text" name="area" required class="form-control">

                            <label>Unit</label>
                            <select name="area_unit" class="show-menu-arrow selectpicker">
                            
                                <option selected value="Marla">Marla</option>
                                @*<option value="Kanal">Kanal</option>*@
                            </select>

                            <label>Property Address</label>
                            <textarea rows="3" required name="address" class="form-control address-text"></textarea>

                            <label>Property Description</label>
                            <textarea rows="3" name="des" required class="form-control address-text"></textarea>

                            <h3>Contact Details</h3>

                            <label>Contact Person</label>
                            <input type="text" name="person_name" required class="form-control">

                            <label>Email <em>(required)</em></label>
                            <input type="text" name="email" required class="form-control">

                            <label>Phone <em>(required)</em></label>
                            <input type="text" name="phone" required class="form-control">

                            <label>Cell</label>
                            <input type="text" name="cell" required class="form-control">

                            <label>Fax</label>
                            <input type="text" name="fax" required class="form-control">

                            

                            <div class="span4 clear-float pos_rel">
                                <input  type="submit" class="btn btn-primary blue-btn agent_detailpop" />
                                <div class="errors_in_div"></div>
                            </div>
                        </form><!-- end search form -->
                    </div><!-- end property_wrapper -->
                </div>


                <!-- end content -->
               
                <!-- end of widget -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </section>
